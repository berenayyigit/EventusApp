<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentDetails">

    <ImageView
        android:id="@+id/imgEvent"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/event_image"/>

    <TextView
        android:id="@+id/txtEventName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imgEvent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/txtEventIntro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Event Intro"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txtEventName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/txtEventOrg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Event Org"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txtEventIntro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/txtEventDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Event Date"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txtEventOrg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/txtEventTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Event Time"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txtEventDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/txtEventLoc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Event Location"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txtEventTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>